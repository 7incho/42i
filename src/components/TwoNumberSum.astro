<div class="flex flex-1 flex-col">
  <h2 class="text-3xl font-bold">Two Number Sum</h2>
  <form class="flex flex-col py-4 gap-2" id="custom-form" action="">
    <label class="block mb-2">
      Enter non-repetitive numbers
      <input
        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
        name="numbers"
        type="text"
        placeholder="5, 3, 1, 2"
      />
    </label>
    <label class="block mb-2">
      Enter target sum
      <input
        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
        name="targetSum"
        type="number"
        placeholder="Enter target sum"
      />
    </label>
    <button
      type="submit"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    >
      Calculate
    </button>
  </form>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("custom-form");
    form?.addEventListener("submit", function (event) {
      event.preventDefault();
      const inputNumbers = (
        document.querySelector('[name="numbers"]') as HTMLInputElement
      ).value
        .split(",")
        .map((num) => parseInt(num.trim()));
      const targetSum = parseInt(
        (document.querySelector('[name="targetSum"]') as HTMLInputElement).value
      );
      const result = findPairWithSum(inputNumbers, targetSum);
      if (result) {
        console.log(
          `The two numbers that sum up to ${targetSum} are: ${result[0]} and ${result[1]}`
        );
      } else {
        console.log("Is not found");
      }
    });

    function findPairWithSum(
      numbers: number[],
      targetSum: number
    ): [number, number] | null {
      const numSet = new Set();
      for (const num of numbers) {
        const complement = targetSum - num;
        if (numSet.has(complement)) {
          return [num, complement];
        }
        numSet.add(num);
      }
      return null;
    }
  });
</script>
